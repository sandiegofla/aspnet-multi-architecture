@model WebMVC.Models.ClienteEndereco

@{
    ViewBag.Title = "Editar Cliente";
}

<!-- Link do Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4">@ViewBag.Title</h2>

    @using (Html.BeginForm("Edit", "Cliente", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Cliente.Id)

        <div class="row">
            <h4>Dados do Cliente</h4>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Cliente.Nome)
                @Html.TextBoxFor(m => m.Cliente.Nome, new { @class = "form-control" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Cliente.CPF)
                @Html.TextBoxFor(m => m.Cliente.CPF, new { @class = "form-control", maxlength = "11" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Cliente.RG)
                @Html.TextBoxFor(m => m.Cliente.RG, new { @class = "form-control", maxlength = "12" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Cliente.DataExpedicao)
                @Html.TextBoxFor(m => m.Cliente.DataExpedicao, new { @class = "form-control", type = "date" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Cliente.OrgaoExpedicao)
                @Html.TextBoxFor(m => m.Cliente.OrgaoExpedicao, new { @class = "form-control" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Cliente.UFExpedicao)
                @Html.DropDownListFor(m => m.Cliente.UFExpedicao, new SelectList(
                    new[] { "AC", "AL", "AP", "AM", "BA", "CE", "DF", "ES", "GO", "MA", "MT", "MS", "MG", "PA", "PB", "PR", "PE", "PI", "RJ", "RN", "RS", "RO", "RR", "SC", "SP", "SE", "TO" }), "-- Selecione --", new { @class = "form-select" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Cliente.DataNascimento)
                @Html.TextBoxFor(m => m.Cliente.DataNascimento, new { @class = "form-control", type = "date" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Cliente.Sexo)
                @Html.DropDownListFor(m => m.Cliente.Sexo, new SelectList(
                    new[] { "Masculino", "Feminino" }), "-- Selecione --", new { @class = "form-select" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Cliente.EstadoCivil)
                @Html.TextBoxFor(m => m.Cliente.EstadoCivil, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <h4 class="mt-4">Endereço</h4>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Endereco.CEP)
                @Html.TextBoxFor(m => m.Endereco.CEP, new { @class = "form-control", id = "cepInput" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Endereco.Logradouro)
                @Html.TextBoxFor(m => m.Endereco.Logradouro, new { @class = "form-control", id = "logradouroInput" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Endereco.Numero)
                @Html.TextBoxFor(m => m.Endereco.Numero, new { @class = "form-control" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Endereco.Complemento)
                @Html.TextBoxFor(m => m.Endereco.Complemento, new { @class = "form-control" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Endereco.Bairro)
                @Html.TextBoxFor(m => m.Endereco.Bairro, new { @class = "form-control", id = "bairroInput" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Endereco.Cidade)
                @Html.TextBoxFor(m => m.Endereco.Cidade, new { @class = "form-control", id = "cidadeInput" })
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Endereco.UF)
                @Html.DropDownListFor(m => m.Endereco.UF, new SelectList(
                    new[] { "AC", "AL", "AP", "AM", "BA", "CE", "DF", "ES", "GO", "MA", "MT", "MS", "MG", "PA", "PB", "PR", "PE", "PI", "RJ", "RN", "RS", "RO", "RR", "SC", "SP", "SE", "TO" }), "-- Selecione --", new { @class = "form-select", id = "ufInput" })
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">Salvar Alterações</button>
            <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary">Cancelar</a>
        </div>
    }
</div>

<!-- Scripts para buscar endereço pelo CEP -->
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#cepInput").on("blur", function () {
                var cep = $(this).val().replace(/\D/g, '');
                if (cep.length === 8) {
                    $.getJSON("https://viacep.com.br/ws/" + cep + "/json/", function (data) {
                        if (!("erro" in data)) {
                            $("#logradouroInput").val(data.logradouro);
                            $("#bairroInput").val(data.bairro);
                            $("#cidadeInput").val(data.localidade);
                            $("#ufInput").val(data.uf);
                        } else {
                            alert("CEP não encontrado.");
                        }
                    }).fail(function () {
                        alert("Erro ao buscar o CEP.");
                    });
                }
            });
        });
    </script>
}
