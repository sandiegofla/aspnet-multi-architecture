@model List<WebMVC.Models.ClienteEndereco>

@{
    ViewBag.Title = "Lista de Clientes";
}

<!-- Link do Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewBag.Title</h2>
        <a class="btn btn-primary" href="@Url.Action("Create", "Cliente")">➕ Novo Cliente</a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Funções</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>RG</th>
                <th>Data Expedição</th>
                <th>Órgão Expedição</th>
                <th>UF Expedição</th>
                <th>Data de Nascimento</th>
                <th>Sexo</th>
                <th>Estado Civil</th>
                <th>CEP</th>
                <th>Logradouro</th>
                <th>Número</th>
                <th>Complemento</th>
                <th>Bairro</th>
                <th>Cidade</th>
                <th>UF</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        <a class="btn btn-sm btn-success mb-1" href="@Url.Action("Edit", "Cliente", new { id = item.Cliente.Id })">✏️ Editar</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Cliente", new { id = item.Cliente.Id })" onclick="return confirm('Deseja realmente excluir este cliente?');">🗑️ Deletar</a>
                    </td>
                    <td>@item.Cliente.Nome</td>
                    <td>@item.Cliente.CPF</td>
                    <td>@item.Cliente.RG</td>
                    <td>@item.Cliente.DataExpedicao</td>
                    <td>@item.Cliente.OrgaoExpedicao</td>
                    <td>@item.Cliente.UFExpedicao</td>
                    <td>@item.Cliente.DataNascimento</td>
                    <td>@item.Cliente.Sexo</td>
                    <td>@item.Cliente.EstadoCivil</td>
                    <td>@item.Endereco.CEP</td>
                    <td>@item.Endereco.Logradouro</td>
                    <td>@item.Endereco.Numero</td>
                    <td>@item.Endereco.Complemento</td>
                    <td>@item.Endereco.Bairro</td>
                    <td>@item.Endereco.Cidade</td>
                    <td>@item.Endereco.UF</td>
                </tr>
            }
        </tbody>
    </table>
</div>
